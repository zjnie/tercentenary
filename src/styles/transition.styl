// fade
.fade-leave-active {
	transition: opacity .5s;
}

.fade-leave-to {
	opacity: 0;
}

.fade-enter {
	opacity: 0;
}

.fade-enter-active {
	transition: opacity .5s;
}

// rotate
.scale-leave-active {
	transform-origin: 0 0;
	transition: transform .5s;
}

.scale-leave-to {
	transform: scaleY(0);
}

.scale-enter {
	transform: scaleY(0);
}

.scale-enter-active {
	transform-origin: 0 0;
	transition: transform .5s;
}

// slide-down
.slide-down-leave {
	transform: translateY(0);
}

.slide-down-leave-to {
	transition: all 1s;
	transform: translateY(100%);
}

.slide-down-enter {
	transform: translateY(-100%)
}

.slide-down-enter-to {
	transform: translateY(0);
	transition: all 1s;
}

// slide-up
.slide-up-leave {
	transform: translateY(0);
}

.slide-up-leave-to {
	transition: all 1s;
	transform: translateY(-100%);
}

.slide-up-enter {
	transform: translateY(100%)
}

.slide-up-enter-to {
	transform: translateY(0);
	transition: all 1s;
}







